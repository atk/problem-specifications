      "property": "jigsawData",
      "input": {
        "pieces": 1500,
        "format": "landscape"
      },
      "expected": {
        "error": "Insufficient data"
      }
    },
    {
      "uuid": "744de990-13bb-11f0-8731-145afc5ea279",
      "description": "pizzle with contradictory data",
      "property": "jigsawData",
      "input": {
        "rows": "100",
        "columns": "1000",
        "format": "square"
      },
      "expected": {
        "error": "Contradictory data"
      }
    }
