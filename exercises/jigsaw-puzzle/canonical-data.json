        "rows": 32,
        "format": "square"
      },
      "expected": {
        "pieces": 1024,
        "border": 124,
        "inside": 900,
        "rows": 32,
        "columns": 32,
        "aspectRatio": 1.0,
        "format": "square"
      }
    },
    {
